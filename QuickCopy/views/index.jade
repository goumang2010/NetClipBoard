extends layout

block content
  .jumbotron
    .container
      .row
        .col-md-6
            h1 Express
            p.lead Express is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.
        .col-md-4.col-md-offset-2
            p="扫描以下二维码提取您寄存的数据"
            div#qrcodeCanvas
              
      .row
        form.formgroup(method="POST",action="/addnote",data-ajax-success="ShowQR",data-ajax-method="Post",data-ajax="true")
          .form-group
            label(for="name")="请输入要寄存的内容"
            textarea.form-control(name="noteText" rows="3" style="max-width:100%;height:200px;")
            button.btn.btn-default="提交"


block scripts
Script(type="text/javascript") showQR(location.href)
        