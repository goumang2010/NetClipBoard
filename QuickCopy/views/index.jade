extends layout
block content
  .metro.jumbotron
    .container
      .row
        .col-md-6
            h1 NetClipBoard 
            h2 寄存你的链接及文字以便快捷中转
            br
            p="下方输入密码以取出内容"
            input#key.form-control
            button#ajaxFetch.btn.btn-primary(type="button")="查询"
        .col-md-4.col-md-offset-2
            p#anchor="请在左侧输入以下密码或扫描生成的二维码提取您寄存的数据:"
            div#handCode
            div#qrcodeCanvas  
      .row.inputarea
        p=" 请输入要寄存的内容:"
          .btn-group
            button#toLower.btn.btn-default 字母小写
            button#toUpper.btn.btn-default 字母大写
            button#copyToBoard.btn.btn-default 复制文本
            input#keepkey(type="checkbox",checked="checked")
            label(for="keepkey") 保持密码           
          textarea#noteText.form-control(name="noteText" rows="3") #{noteText}
          button#submitAjax.btn.btn-primary(type="button")="提交"
          button#retoSocket.btn.btn-primary(type="button",style="margin-left:5px")="对话" 
block scripthead
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
block scripts  
    script(src="//cdn.bootcss.com/jquery.qrcode/1.0/jquery.qrcode.min.js") 
    script(src='//apps.bdimg.com/libs/respond.js/1.4.2/respond.js')
    script(src="/self/clientIndex.js")

